<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/regiForm.css">
    <script src="https://kit.fontawesome.com/629bbf93e8.js" crossorigin="anonymous"></script>
</head>

<body>
    <% var total = 0 %>
    <% var count = 0 %>
    <% var ratting  %>
    <% var rat  %>
    <% for (const i in feedbacklist) { %>
        <% rat =  feedbacklist[i].rating %> 
        <% total += rat %>
        <% count = count + 1 %>
        <% } %>

        <% if(count == 0){ %>
            <% ratting = 0 %>
            <% } else { %>
                <% total%>
                <% count %>
                <% ratting = total / count %> 

            <% } %>

<div class="body">

    <h2 id="dt">Brnach Details</h2>
    <div class="details">
        <div id="img">
        <img src="<%= branchList1.image1 %>" alt="Image Not Available" style="width: 100%; height: 80%;"> 
        </div>
    
  
          <div class="det">

            <h3><%= branchList1.branchName %></h3>
            <p><%= branchList1.zone %></p>
            <p><i class="fa-solid fa-star"></i>&emsp;<%= ratting.toFixed(1) %></p>
            <p><i class="fa-solid fa-address-book"></i>&emsp;<%= branchList1.contactNo %></p>
            <p><i class="fa-solid fa-chair"></i>&emsp;<%= branchList1.noOfSlot %></p>
             <p><i class="fa-solid fa-location-crosshairs"></i>&emsp;<%= branchList1.address %></p>
             <p><i class="fa-solid fa-circle-info"></i>&emsp;<%= branchList1.description %></p>
          </div>
      </div>

      <hr>
      <% if(feedbacklist.length != 0){ %>
      <h2 id="fb">Feedbacks</h2>
       <div class="fblist">
        
         <% for (const i in feedbacklist) { %>
          <div class="container2"> 
          <p><%= feedbacklist[i].date %></p>
          <p>Username : <%= feedbacklist[i].username %></p>
          <p class="rat">Rating : <%= feedbacklist[i].rating %>
          </p>
          <p><%= feedbacklist[i].feedback %>
          </p>
        </div>
        <% } %>
        </div>
        <% }else{ %>
            <div class="container1">
          <h2 id="fb">No Feedback Found</h2>
        </div>
        <% } %>
       

    <hr>

    <h2 id="bt">Book Slot</h2>
    <div class="slot">  
    <form action="/findslot" method="post" >
        <div class="input-container">
        <input type="text" name="branchname" hidden value="<%= branchList1.branchName %>">
        <div class="input-feild">
        <p class="label"> No of Male Slots  </p> 
        <input type="number" class="input" name="maleSlot"  placeholder="Enter number of male slot" min="0" aria-valuenow="0">
    </div>
    <div class="input-feild">
        <p class="label">No of Female Slots  </p> 
        <input type="number" class="input" name="femaleSlot" placeholder="Enter number of female slot" min="0" aria-valuenow="0" >
    </div>
    <div class="input-feild">
        <p class="label">Select duration of Plan  </p>
        <select name="plan">
            <option value="30" selected>30 day</option>
            <option value="90">90 day</option>
            <option value="180">180 day</option>
            <option value="365">365 day</option>
        </select>
    </div>
    </div>
        <button type="submit">Submit</button>
    </form>
</div>

</div>
</body>
</html>